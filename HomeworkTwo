### Problem 2
###

# DO NOT CHANGE THE FOLLOWING LINE
print "Problem 2 solution follows:"

import math
from fractions import Fraction
from decimal import Decimal

n=1.0
for ans in (range(11)):
   if ans > 1: 
       print "Fraction:"
       print str (Fraction(n/ans))
       print "Decimal of above Fraction:"
       print str (Decimal(n/ans))
        
# Why are some of the fractions and decimals wrong?

###
### Problem 3
###

# DO NOT CHANGE THE FOLLOWING LINE
print "Problem 3 solution follows:"

n = 10
triangular = 0
for i in range(11):
    triangular = sum (range(11))
print "Triangular number", n, "via loop:", triangular
print "Triangular number", n, "via formula:", (n*(n+1))/2

###
### Problem 4
###

# DO NOT CHANGE THE FOLLOWING LINE
print "Problem 4 solution follows:"

n = 10
fact = 1
for i in range (2, n +1):
    fact = fact * i
print "Factorial of", n, "via for loop:", str(fact)

print "Factorial of", n, "via function:", math.factorial(n)

