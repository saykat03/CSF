# DO NOT CHANGE THE FOLLOWING LINE
print "Problem 1 solution follows:"

from hw2_test.py import n
num = 0
i = 1

while i < (n +1):
      num = (num + 1)
      i = (i + 1)
print num

#the following is another way to get the same answer...

x = 1
ans = 0
itersLeft = x
while (itersLeft !=0):
    ans = ans + x
    itersLeft = itersLeft - 1
print sum (range(101))

